<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculation"
        android:layout_width="0dp"
        android:layout_height="120dip"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/n_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/m_c"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/result"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/m_minus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/n_2"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/m_c"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/n_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@+id/calculation"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/f_plus"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/m_minus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/n_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/m_plus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/n_5"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/m_c"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/n_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="6"
        app:layout_constraintTop_toBottomOf="@+id/calculation"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/f_minus"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/m_minus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/n_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="4"
        app:layout_constraintStart_toEndOf="@+id/m_plus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/n_8"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/m_c"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/n_7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="7"
        app:layout_constraintTop_toBottomOf="@+id/calculation"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="clear"
        app:layout_constraintStart_toEndOf="@+id/m_minus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/n_9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/m_plus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/f_divide"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/m_c"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/f_clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="C"
        app:layout_constraintTop_toBottomOf="@+id/calculation"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/f_multiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="X"
        app:layout_constraintStart_toEndOf="@+id/m_plus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/m_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="mc"
        app:layout_constraintTop_toBottomOf="@+id/calculation"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/m_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="m-"
        app:layout_constraintStart_toEndOf="@+id/m_plus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/m_plus"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="m+"
        app:layout_constraintStart_toEndOf="@+id/m_c"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/m_read"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="Mr"
        app:layout_constraintStart_toEndOf="@+id/m_minus"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

</androidx.constraintlayout.widget.ConstraintLayout>